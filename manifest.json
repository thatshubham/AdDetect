{
  "applications": {
    "gecko": {
      "id": "NeevaTest@example.org",
      "strict_min_version": "65.0"
    }
  },"name": "Ad Highlight",
  "version": "0.1",
  "description": "Highlight Search-Engine Advertisements",
  "manifest_version": 2,
  "icons": {
    "128": "img/icon128.png",
    "512": "img/icon512.png"
  }, 
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon256.png",
    "default_title": "Ad Count",
    "default_popup": "assets/popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
       "matches": [
        "*://duckduckgo.com/*"
      ], 
      "js": [
        "assets/content.js"
      ],
      "css": [
        "assets/custom.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "*://duckduckgo.com/*",
    "*://*.duckduckgo.com/*"   
  ]
}
